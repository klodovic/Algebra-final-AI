    <div id="particles-js" class="box"></div>
    <div class="container box-overlay">
        <div class="row mt-5" style="height: 750px;">
            <div class="col-4">
                <div>
                    <div class="card-body d-flex justify-content-center">
                        <img src="~/logo-vertical.png" class="w-50" />
                    </div>
                    <div class="card-body d-flex justify-content-center mt-4">
                        <h3 class="card-title text-light"><span class="text-warning">Tvrtko</span>.ai</h3>
                    </div>
                </div>
