@model CompanyWeb.Models.UserDTO


<div class="row d-flex justify-content-center mt-3">
    <div class="col-6 mt-5">
        <div class="card text-secondary bg-dark border-primary mb-3">
            <div class="card-header bg-dark text-warning border-bottom border-primary fs-5"><i class="bi bi-info-square-fill mr"></i> Korisnički podaci</div>
            <div class="card-body p-5">

                <div class="d-flex justify-content-center mb-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-vcard-fill text-body-tertiary" viewBox="0 0 16 16">
                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm9 1.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4a.5.5 0 0 0-.5.5ZM9 8a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4A.5.5 0 0 0 9 8Zm1 2.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 0-1h-3a.5.5 0 0 0-.5.5Zm-1 2C9 10.567 7.21 9 5 9c-2.086 0-3.8 1.398-3.984 3.181A1 1 0 0 0 2 13h6.96c.026-.163.04-.33.04-.5ZM7 6a2 2 0 1 0-4 0 2 2 0 0 0 4 0Z" />
                    </svg>
                </div>

                <div class="border-bottom border-primary mb-4 ">
                    <span class="badge bg-warning text-dark">Korisničko ime</span>
                    <p class="fs-4 mt-3"><i class="bi bi-person-fill"></i> @Model.Name</p>
                </div>

                <div class="border-bottom border-primary mb-4">
                    <span class="badge bg-warning text-dark">E-mail</span>
                    <p class="fs-4 mt-3"><i class="bi bi-envelope-at"></i> @Model.Email</p>
                </div>

                <div class="d-flex justify-content-center">
                    <div class="w-50 d-flex justify-content-center">
                        <a asp-controller="Home" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary m-2" data-toggle="tooltip" data-placement="top" title="Uredi profil"><i class="bi bi-pencil-square"></i> Uredi</a>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger m-2" data-toggle="tooltip" data-placement="top" title="Obriši profil"><i class="bi bi-trash-fill"></i> Obriši</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

