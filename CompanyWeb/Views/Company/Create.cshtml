@model CompanyWeb.ModelDTO.OrganizationCreateDTO

<div class="border-bottom">
    <div class="row">
        <h2 class="mt-3 mb-3 text-warning">Nova tvrtka</h2>
    </div>
</div>
<div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div>

        <div class="row text-muted pb-4">

            <h4 class="card-title text-light mt-5"><i class="bi bi-building-fill-add"></i> Osnovni podaci</h4>
            <div class="col-6 form-group">
                <label asp-for="CompanyName" class="form-label mt-2">Naziv tvrtke</label>
                <input asp-for="@Model.CompanyName" class="form-control form-control-sm" id="companyName" aria-describedby="companyName" placeholder="Tvrtka">
                <span asp-validation-for="CompanyName" class="text-warning text-small"></span>
            </div>

            <div class="col-6 form-group">
                <label asp-for="Street" class="form-label mt-2">Adresa tvrtke</label>
                <input asp-for="@Model.Street" class="form-control form-control-sm" id="street" aria-describedby="street" placeholder="Adresa">
            </div>

            <div class="col-4 form-group">
                <label asp-for="City" class="form-label mt-2">Naziv grada</label>
                <input asp-for="@Model.City" class="form-control form-control-sm" id="city" aria-describedby="city" placeholder="Grad">
            </div>

            <div class="col-4 form-group">
                <label asp-for="PostNumber" class="form-label mt-2">Poštanski broj</label>
                <input asp-for="@Model.PostNumber" class="form-control form-control-sm" id="postNumber" aria-describedby="postNumber" placeholder="Poštanski broj">
            </div>

            <div class="col-4 form-group">
                <label asp-for="Country" class="form-label mt-2">Država</label>
                <input asp-for="@Model.Country" class="form-control form-control-sm" id="country" aria-describedby="country" placeholder="Država">
            </div>

            <h4 class="card-title text-light mt-5"><i class="bi bi-headset"></i> Kontakt podaci</h4>

            <div class="col-4 form-group">
                <label asp-for="Phone" class="form-label mt-2">Telefon</label>
                <input asp-for="@Model.Phone" class="form-control form-control-sm" id="phone" aria-describedby="phone" placeholder="Telefon">
           </div>

            <div class="col-4 form-group">
                <label asp-for="Fax" class="form-label mt-2">Fax</label>
                <input asp-for="@Model.Fax" class="form-control form-control-sm" id="fax" aria-describedby="fax" placeholder="Fax">
            </div>

            <div class="col-4 form-group">
                <label asp-for="CellNumber" class="form-label mt-2">Mobilni telefon</label>
                <input asp-for="@Model.CellNumber" class="form-control form-control-sm" id="cellPhone" aria-describedby="cellPhone" placeholder="Mobilni telefon">
            </div>

            <div class="col-6 form-group">
                <label asp-for="Website" class="form-label mt-2">Web stranica</label>
                <input asp-for="@Model.Website" class="form-control form-control-sm" id="website" aria-describedby="website" placeholder="Web stranica">
            </div>

            <div class="col-6 form-group">
                <label asp-for="Email" class="form-label mt-2">E-mail</label>
                <input asp-for="@Model.Email" class="form-control form-control-sm" id="email" aria-describedby="email" placeholder="E-mail">
            </div>

            <h4 class="card-title text-light mt-5"><i class="bi bi-info-square-fill"></i> Ostale informacije</h4>

            <div class="col-4 form-group">
                <label asp-for="Oib" class="form-label mt-2">OIB tvrtke</label>
                <input asp-for="@Model.Oib" class="form-control form-control-sm" id="oib" aria-describedby="oib" placeholder="OIB tvrtke">
            </div>

            <div class="col-4 form-group">
                <label asp-for="Mbs" class="form-label mt-2">MBS tvrtke</label>
                <input asp-for="@Model.Mbs" class="form-control form-control-sm" id="mbs" aria-describedby="mbs" placeholder="MBS tvrtke">
            </div>

            <div class="col-4 form-group">
                <label asp-for="Iban" class="form-label mt-2">IBAN tvrtke</label>
                <input asp-for="@Model.Iban" class="form-control form-control-sm" id="iban" aria-describedby="iban" placeholder="IBAN tvrtke">
            </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <div class="w-50 d-flex justify-content-center">
                <a asp-action="Index" asp-controller="Company" class="btn btn-secondary form-control w-25 m-2"><i class="bi bi-caret-left-fill"></i> Povratak</a>
                <button type="submit" value="Spremi" class="btn btn-primary form-control w-25 m-2"><i class="bi bi-database-fill-up mr"></i>  Spremi</button>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
