@using CompanyWeb.Utility;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpAcc

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/CompanyWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @*Icons*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-xxl bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" class="logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Info"><i class="bi bi-info-circle-fill"></i> Info</a>
                        </li>
                    </ul>
                    @if (httpAcc.HttpContext.Session.GetString(StaticDetails.SessionToken) != null
                    && httpAcc.HttpContext.Session.GetString(StaticDetails.SessionToken).ToString().Length > 0)
                    {
                        <div class="d-flex">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="AI" asp-action="Index"><i class="bi bi-image-fill text-warning"></i> Tvrtko.ai</a>
                                </li>                                
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Company" asp-action="Index"><i class="bi bi-buildings text-warning"></i> Kompanije</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Home" asp-action="Logout"><i class="bi bi-power text-warning"></i> Odjava</a>
                                </li>
                            </ul>
                        </div>

                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top-custom footer text-muted">
        <div class="container alignment-center">
            <p class="card-title text-light">&copy; 2023 |<span class="text-warning"> Tvrtko</span>.ai</p>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/js/plugins.js" asp-append-version="true"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/particles.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
